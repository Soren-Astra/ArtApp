<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="8">

        <TextView
            android:id="@+id/import_string_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/dialog_import_string"
            android:textColor="@color/burnt_orange"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/import_string_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:ems="10"
            android:gravity="bottom"
            android:hint="@string/dialog_import_string"
            android:inputType="text|textMultiLine"
            android:lines="4"
            android:minHeight="@dimen/min_height"
            android:singleLine="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="OR"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="8">

        <TextView
            android:id="@+id/import_file_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/dialog_import_file"
            android:textColor="@color/burnt_orange"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/import_file_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="10"
            android:gravity="bottom"
            android:hint="@string/dialog_import_file"
            android:inputType="text"
            android:minHeight="@dimen/min_height" />

        <ImageButton
            android:id="@+id/import_file_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/peach_yellow"
            android:src="@drawable/baseline_attach_file_24" />
    </LinearLayout>

    <View
        android:id="@+id/import_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="8">

        <TextView
            android:id="@+id/import_mode_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:contentDescription="@string/dialog_import_mode"
            android:text="@string/dialog_import_mode"
            android:textColor="@color/burnt_orange"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/import_mode_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:entries="@array/import_modes"
            android:minHeight="@dimen/min_height" />

    </LinearLayout>

</LinearLayout>